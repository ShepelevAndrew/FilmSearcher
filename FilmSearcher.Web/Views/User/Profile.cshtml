@model UserViewModel

<div class="profile-container">
    <div class="background-profile-photo">
        <img class="background-img" src="~/img/picture/background-dark.jpg" />
        <div class="profile-user-photo">
            <img src="~/img/picture/002.jpg" />
        </div>
    </div>
    <h2 class="username">
        @Model.User.Name
    </h2>

    <ul class="profile-nav">
        <li>У закладках</li>
        <li>Оцінені</li>
        <li>Статистика</li>
    </ul>
    <div class="main-container">
        <div class="main">
            @foreach(var movie in Model.Movies)
            {
            <div>
                <img src="@movie.ImageURL" width="150px" />
                    <ul>
                    <li>@movie.Name</li>
                    <li>@movie.Category</li>
                </ul>
            </div>
            }
        </div>
    </div>
</div>

<style>
    ul {
        list-style: none;
        padding: 0;
    }

    h2 {
        text-align: center;
        font-family: sans-serif;
    }

    .profile-container {
        width: 90%;
    }
    .background-profile-photo {
        margin: 0;
        justify-content: center;
        display: flex;
        position: relative;
    }
    .background-img {
        height: 200px;
        object-fit: cover;
        width: 100%
    }
    .profile-user-photo {
        position: absolute;
        bottom: -3.5em
    }
    .profile-user-photo img {
        width: 7em;
        height: 7em;
        border-radius: 50%;
        border: 3px solid white;
    }
    .username {
        margin: 60px 0 0 0;
    }
    .profile-nav {
        margin: 10px 0 0 0;
        padding: 0;
        display: flex;
        justify-content: center;
        grid-column-gap: 20px;
    }
    .profile-nav li {
        border-bottom: 1px solid transparent;
        transition: .3s;
    }
    .profile-nav li:hover {
        cursor: pointer;
        border-bottom: 1px solid black;
    }
    .main-container {
        display: flex;
        justify-content: center;
        width: 100%;
    }
    .main {
        display: flex;
        justify-content: center;
        grid-column-gap: 20px;
        flex-wrap: wrap;
        margin: 20px 0;
    }
</style>